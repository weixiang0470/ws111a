<div id="id01" class="modal">
    <form id="LoginForm" class="modal-content animate" method="post" action="/login">
        <h1>&#9775Login&#9775</h1>
        <hr style="width:100%;margin-top:5px;border-radius:5px;">
        <div class="container">
            <input class="inpcls" type="text" placeholder="Username" name="uname" required><br>
            <input class="inpcls" type="password" placeholder="Password" name="psw" required><br>
            <button class="subid" tpye="submit" >Login</button>
        </div>
    </form>
</div>
<div>
<img style="width:90px;height:90px;background-image:radial-gradient(circle,white, black);margin:-8px;" id="whoID" src="../Images/guest.png">
